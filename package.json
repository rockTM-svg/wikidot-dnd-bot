{
	"name": "wikidot-dnd-discord-bot",
	"version": "0.0.1",
	"description": "Discord bot for getting information from DnD Wikidot about spells/races/etc...",
	"main": "main.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"format": "biome format",
		"command-up": "tsx deploy-commands.ts",
		"dev": "tsx watch main.ts",
		"build": "tsc",
		"docker-build": "docker build --secret id=BOT_TOKEN,src=./.env -t wikidot-dnd-bot ."
	},
	"author": "silicate-harvester",
	"license": "MIT",
	"type": "module",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/node": "^25.0.3",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"cheerio": "^1.1.2",
		"discord.js": "^14.25.1"
	}
}
